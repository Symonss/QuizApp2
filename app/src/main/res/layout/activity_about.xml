<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:weightSum="1"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.36">

                <ImageView
                    android:id="@+id/crypto_sasa_logo"
                    android:layout_width="match_parent"

                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/me" />

            </LinearLayout>

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/app_name"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/textFieldVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Version 1.0" />

                <TextView
                    android:id="@+id/textFieldVersionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/textFieldVersion"
                    android:layout_toRightOf="@+id/textFieldVersion"
                    android:text="" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textFieldPowered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Author : Symons Ombori"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="0.67"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Feel Free to Modify this app"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="More Info" />

            <TextView
                android:id="@+id/authorLinkedin"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Symons.linkdn.com"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/githubURL"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="githublink"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/githu"
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="intro to crypto "
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>